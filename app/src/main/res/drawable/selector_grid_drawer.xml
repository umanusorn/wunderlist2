<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item
     android:state_selected="false"
        android:state_pressed="false"
         android:state_enabled="true">
		<shape>
            <solid
                android:color="#ffffff" />
            <padding
                android:left="@dimen/activity_component_margin"
                android:top="@dimen/activity_component_margin"
                android:right="@dimen/activity_component_margin"
                android:bottom="@dimen/activity_component_margin" />
            <stroke
                android:width="0.2dp"
                android:color="@color/background_grey"/>
                
        </shape>	    
	</item>
 
    <item android:state_pressed="true">
		<shape>
            <solid
                android:color="#dddddd" />
            <padding
                android:left="@dimen/activity_component_margin"
                android:top="@dimen/activity_component_margin"
                android:right="@dimen/activity_component_margin"
                android:bottom="@dimen/activity_component_margin" />
            <stroke
                android:width="0.2dp"
                android:color="@color/background_grey"/>
		</shape>        
    </item>
 
    <item android:state_selected="true"
     android:state_pressed="false">
		<shape>
            <solid
                android:color="#dddddd" />
            <padding
                android:left="@dimen/activity_component_margin"
                android:top="@dimen/activity_component_margin"
                android:right="@dimen/activity_component_margin"
                android:bottom="@dimen/activity_component_margin" />
            <stroke
                android:width="0.2dp"
                android:color="@color/background_grey"/>
		</shape>        
    </item>
    <item
     android:state_enabled="false">
		<shape>
            <solid
                android:color="#dddddd" />
            <padding
                android:left="@dimen/activity_component_margin"
                android:top="@dimen/activity_component_margin"
                android:right="@dimen/activity_component_margin"
                android:bottom="@dimen/activity_component_margin" />
            <stroke
                android:width="0.2dp"
                android:color="@color/background_grey"/>
		</shape>        
    </item>
</selector>