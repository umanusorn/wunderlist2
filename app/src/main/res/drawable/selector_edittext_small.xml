<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
       <shape>
			<solid android:color="@color/white" />
			<stroke 
			    android:width="2dp"
			    android:color="@color/background_grey"/>
			<padding
				android:left="4dp"
				android:top="2dp"
				android:right="4dp"
				android:bottom="2dp" />
		
		</shape>   
    </item>
	<item android:state_window_focused="false" 
		android:state_enabled="false">
       <shape>
			<solid android:color="@color/white" />
			<stroke 
			    android:width="2dp"
			    android:color="@color/background_grey"/>
			<padding
				android:left="4dp"
				android:top="2dp"
				android:right="4dp"
				android:bottom="2dp" />
		
		</shape>   
	</item>
    <item android:state_window_focused="false"  android:state_enabled="true">
       <shape>
			<solid android:color="@color/white" />
			<stroke 
			    android:width="2dp"
			    android:color="@color/background_grey"/>
			<padding
				android:left="4dp"
				android:top="2dp"
				android:right="4dp"
				android:bottom="2dp" />
		
		</shape>   
    </item>
    <item android:state_enabled="true">
       <shape>
			<solid android:color="@color/white" />
			<stroke 
			    android:width="2dp"
			    android:color="@color/background_grey"/>
			<padding
				android:left="4dp"
				android:top="2dp"
				android:right="4dp"
				android:bottom="2dp" />
		</shape>   
    </item>
	<item>
       <shape>
			<solid android:color="@color/white" />
			<stroke 
			    android:width="2dp"
			    android:color="@color/background_grey"/>
			<padding
				android:left="4dp"
				android:top="2dp"
				android:right="4dp"
				android:bottom="2dp" />
		</shape>   
	</item>    
</selector>