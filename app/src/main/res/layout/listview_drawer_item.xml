<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:id="@+id/linearBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_component_margin_small"
    android:paddingBottom="@dimen/activity_component_margin_small"
    android:paddingLeft="@dimen/activity_component_margin"
    android:paddingRight="@dimen/activity_component_margin"
    android:background="@drawable/selector_background_drawer2"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="@dimen/activity_component_margin_small"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="asdfg"
        android:textSize="@dimen/text_size_subtitle"
        android:gravity="center_vertical"/>

    <ImageView
        android:id="@+id/imageViewArrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_action_expand" />

</LinearLayout>