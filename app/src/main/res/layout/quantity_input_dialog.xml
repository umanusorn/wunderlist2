<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dialog"
    android:orientation="vertical" >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:orientation="vertical" >
	
	    <TextView
	        android:id="@+id/textViewTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:textSize="22sp"
	        android:text="Title" />
	
	</LinearLayout>
	<!-- <View android:id="@+id/titleDividerTop"
		android:layout_width="match_parent"
		android:layout_height="2dip"
		android:background="@color/orange" /> -->
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/activity_horizontal_margin"
	    android:layout_marginRight="@dimen/activity_horizontal_margin"
	    android:layout_marginBottom="@dimen/activity_vertical_margin"
	    android:gravity="center"
	    android:orientation="horizontal">
	    <com.vi8e.um.wunderlist.widgets.CustomTextView
	        android:id="@+id/textViewMinus"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/text_size_icon_XXL"
	        android:layout_marginRight="@dimen/activity_component_margin_small"
	     	my:customFont="fontawesome-webfont.ttf"
	     	android:textColor="@color/orange"
	        android:text="@string/ic_minus"
	        android:clickable="true" />
		<EditText
		    android:id="@+id/editTextAmount"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:ems="4"
		    android:maxLength="4"
		    android:textColor="@color/black"
		    android:gravity="right|center_vertical"
		    android:inputType="number"
		    style="@style/MyEditText"/>
		<com.vi8e.um.wunderlist.widgets.CustomTextView
		    android:id="@+id/textViewPlus"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/text_size_icon_XXL"
	        android:layout_marginLeft="@dimen/activity_component_margin_small"
	     	my:customFont="fontawesome-webfont.ttf"
	     	android:textColor="@color/orange"
	        android:text="@string/ic_plus"
	        android:clickable="true" />
	</LinearLayout>
	<TextView
	    android:id="@+id/textViewError"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/activity_horizontal_margin"
	    android:layout_marginRight="@dimen/activity_horizontal_margin"
	    android:layout_marginBottom="@dimen/activity_vertical_margin"
	    android:textColor="#ff0000"
	    android:text="Value cannot be blank"
	    android:visibility="gone"/>
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/activity_horizontal_margin"
	    android:layout_marginRight="@dimen/activity_horizontal_margin"
	    android:layout_marginBottom="@dimen/activity_vertical_margin"
	    android:gravity="center"
	    android:orientation="horizontal">
		<Button
		    android:id="@+id/buttonNegative"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_height="@dimen/activity_component_default_height"
	    	android:layout_marginRight="@dimen/activity_component_margin_small"
	    	style="?android:attr/buttonStyleSmall"
		    android:background="@drawable/background_button_dialog"
		    android:textColor="@color/white"
		    android:text="Cancel" />
	    <Button
		    android:id="@+id/buttonPositive"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_height="@dimen/activity_component_default_height"
		    android:layout_marginLeft="@dimen/activity_component_margin_small"
		    style="?android:attr/buttonStyleSmall"
		    android:background="@drawable/background_button_dialog"
		    android:textColor="@color/white"
		    android:text="Log In" />
	</LinearLayout>

</LinearLayout>
