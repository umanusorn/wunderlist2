<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:paddingTop="@dimen/activity_component_margin"
	android:paddingBottom="@dimen/activity_component_margin"
	android:paddingRight="@dimen/activity_component_margin"
	android:paddingLeft="@dimen/activity_component_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/relativeLayoutImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginRight="@dimen/activity_component_margin"
        android:background="@color/gallery_frame_color"
        android:padding="@dimen/activity_component_margin_small_half" >

        <ImageView
            android:id="@+id/imageViewItem"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:orientation="vertical">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
         <LinearLayout android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:orientation="vertical">
	        <TextView android:id="@+id/textViewBrand"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
		        android:textColor="@color/black"
		        android:singleLine="true"
		        android:textSize="@dimen/text_size_subtitle"/>
		    <TextView
		        android:id="@+id/textViewTitle"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/black"
		        android:lines="2"
		        android:textSize="@dimen/text_size_subtitle"/>
	             
         </LinearLayout>
		<ImageButton
		    android:id="@+id/imageButtonDelete"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@null"
		    android:src="@drawable/ic_action_delete" />
            
        </LinearLayout>
        <TextView
	        android:id="@+id/textViewPromo"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/green_shoppingcart_font"
	        android:textSize="@dimen/text_size_subtitle" />
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextQty"
                android:clickable="true"
	        	android:focusableInTouchMode="false"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:ems="3"
                android:gravity="right"
                android:maxLength="4"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_edittext_small"/>
			<TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/black"
		        android:textSize="@dimen/text_size_subtitle"
		        android:text=" x " />
			<TextView
		        android:id="@+id/textViewDisc"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:textColor="@color/green_shoppingcart_font"
		        android:textSize="@dimen/text_size_content" />
			<TextView
	            android:id="@+id/textViewSubtotal"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
		        android:textColor="@color/black"
		        android:textSize="@dimen/text_size_content"
	            android:gravity="right" />
        </LinearLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
			<EditText
	        	android:focusableInTouchMode="false"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:ems="2"
                android:visibility="invisible"
                android:gravity="right"
                android:maxLength="3"
                android:layout_height="1dp"
                android:background="@drawable/selector_edittext_small"/>
			<TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:visibility="invisible"
		        android:textColor="@color/black"
		        android:textSize="@dimen/text_size_subtitle"
		        android:text=" x " />
	        <TextView
	            android:id="@+id/textViewPrice"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
		        android:textColor="@color/black"
		        android:textSize="@dimen/text_size_content_small" />
	        <TextView
	            android:id="@+id/textViewSavings"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
		        android:textColor="@color/green_shoppingcart_font"
		        android:textSize="@dimen/text_size_content_small" />
