<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
	    <FrameLayout
	        android:id="@+id/frame_container"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1" />
	</LinearLayout>    
	<RelativeLayout 
	    android:id="@+id/linearLayout_slidermenu"
		android:layout_width="@dimen/drawer_width"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:background="@color/list_background">
	    <LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:layout_centerInParent="true">
		    <com.vi8e.giantapp.widgets.EditTextClearButton
	            android:id="@+id/editTextSearch"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="@dimen/activity_component_margin"
	            android:layout_marginBottom="@dimen/activity_component_margin"
	            android:layout_marginLeft="@dimen/activity_component_margin"
	            android:layout_marginRight="@dimen/activity_component_margin"
	            android:singleLine="true"
	            android:imeOptions="actionSearch"
	            android:hint="Search.."
	            
	            android:ems="10"/>
		    <ListView
		        android:id="@+id/list_slidermenu"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:choiceMode="singleChoice"
		        android:divider="@null" />
	    </LinearLayout>
  	    <!-- <com.vi8e.giantapp.widgets.CustomTextView
  	        android:id="@+id/textViewUp"
  	        android:clickable="true"
  	        android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
			android:layout_marginRight="@dimen/activity_component_margin_small"	    
			android:layout_marginBottom="@dimen/activity_component_margin_small"
	       	android:layout_width="@dimen/text_size_title_large"
	       	android:layout_height="wrap_content"
	       	android:textSize="@dimen/text_size_title_large"
	    	my:customFont="fontawesome-webfont.ttf"
	    	android:textColor="@color/grey_subtitle_color"
	   	    android:text="@string/ic_arrow" /> -->
	</RelativeLayout>
</android.support.v4.widget.DrawerLayout>