<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_gallery_item"
    android:orientation="vertical">
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <ImageView
	        android:id="@+id/imageViewPicture"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:scaleType="fitCenter"
	        android:adjustViewBounds="true"
	        android:layout_gravity="center_vertical"
	        android:layout_margin="@dimen/activity_component_margin" />
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical">
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="@dimen/activity_component_margin_small"
		        android:layout_marginRight="@dimen/activity_component_margin_small"
		        android:layout_marginBottom="@dimen/activity_component_margin"
		        android:text="Purchase With Purchase"
		        android:singleLine="true"
		        android:textColor="@color/black"
		        android:textStyle="bold"
		        android:textSize="@dimen/text_size_content"/>
		    <TextView
		        android:id="@+id/textViewItemPromo"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="@dimen/activity_component_margin_small"
		        android:layout_marginRight="@dimen/activity_component_margin_small"
		        android:layout_marginBottom="@dimen/activity_component_margin"
		        android:singleLine="true"
		        android:textColor="@color/black"
		        android:textSize="@dimen/text_size_content"/>
			<TextView
		        android:id="@+id/textViewItemName"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="@dimen/activity_component_margin_small"
		        android:layout_marginRight="@dimen/activity_component_margin_small"
		        android:layout_marginBottom="@dimen/activity_component_margin"
		        android:singleLine="true"
		        android:textColor="@color/black"
		        android:textSize="@dimen/text_size_content"/>    
		    <LinearLayout android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
				<LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="48dp"
				    android:layout_marginRight="@dimen/activity_component_margin"
				    android:layout_marginBottom="@dimen/activity_component_margin_small_half"
				    android:orientation="horizontal"
				    android:gravity="center_vertical">
					<LinearLayout android:layout_width="0dp"
				        android:orientation="vertical"
				        android:layout_weight="0.25"
				        android:layout_marginRight="@dimen/activity_component_margin_small"
				        android:gravity="center"
				        android:layout_height="48dp">
				       <!--  <TextView android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:textColor="@color/white"
				            android:textStyle="bold"
				            android:text="Normal"
				            android:textSize="@dimen/text_size_content_small"/> -->
				        <TextView android:id="@+id/textViewPrice"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:textColor="@color/black"
				            android:text="S$33.90"
				            android:textStyle="bold"
				            android:textSize="@dimen/text_size_content_small"/>
				    </LinearLayout>	    
				    <LinearLayout android:layout_width="0dp"
				        android:layout_height="48dp"
				        android:layout_weight="0.25"
				        android:orientation="vertical"
				        android:layout_marginRight="@dimen/activity_component_margin_small"
				        android:gravity="center">
				        <TextView android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:textColor="@color/error_color"
				            android:textStyle="bold"
				            android:text="ONLY"
				            android:textSize="@dimen/text_size_content_small"/>
				        <TextView android:id="@+id/textViewPromoPrice"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:textColor="@color/error_color"
				            android:textStyle="bold"
				            android:text="S$30.00"
				            android:textSize="@dimen/text_size_content_small"/>
				    </LinearLayout>
				    <!-- <TextView
					    android:id="@+id/textViewPromoPrice"
					    android:layout_width="0dp"
					    android:layout_height="wrap_content"
					    android:layout_weight="0.3"
					    android:gravity="right"
					    android:text="S$50.90"
					    android:textColor="@color/black"
					    android:layout_marginLeft="@dimen/activity_component_margin_small"
				        android:layout_marginRight="@dimen/activity_component_margin_small"
					    android:textSize="@dimen/text_size_subtitle" /> -->	    
				    <!-- <TextView
					    android:id="@+id/textViewPrice"
					    android:layout_width="0dp"
					    android:layout_height="wrap_content"
					    android:layout_weight="0.3"
					    android:gravity="right"
					    android:text="S$50.90"
					    android:textColor="@color/black"
					    android:layout_marginLeft="@dimen/activity_component_margin_small"
				        android:layout_marginRight="@dimen/activity_component_margin_small"
					    android:textSize="@dimen/text_size_subtitle" /> -->
				    <Button 
				        android:id="@+id/buttonBuy"
				        android:layout_width="0dp"
				        android:layout_height="48dp"
				        android:layout_weight="0.5"
				        android:text="Buy"
				        android:textColor="@color/white"
				        android:textSize="@dimen/text_size_button"
				        android:background="@drawable/background_button_green"/>
				</LinearLayout>
		    </LinearLayout>
	    </LinearLayout>
				    	    
	</LinearLayout>


</LinearLayout>