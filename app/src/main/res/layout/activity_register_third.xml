<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vi8e.giantapp.RegisterThirdActivity" >
    <ScrollView android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingBottom="@dimen/activity_component_margin"
		    android:paddingLeft="@dimen/activity_component_margin"
		    android:paddingRight="@dimen/activity_component_margin"
		    android:paddingTop="@dimen/activity_component_margin"
		    android:orientation="vertical">
	        <TextView 
	            android:id="@+id/textViewTitle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
		        android:text="Delivery Address" 
		        android:textStyle="bold"
	            android:textSize="@dimen/text_size_title"/>
	    		    
		    <LinearLayout android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
		        <TextView android:layout_width="0dp"
		            android:layout_weight="1"
		            android:layout_height="wrap_content"
			        android:text="Same as Billing Address" 
		            android:textSize="@dimen/text_size_subtitle"/>
			    <CheckBox
			        android:id="@+id/checkBoxDelivery"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:checked="true"
			        android:layout_marginBottom="@dimen/activity_component_margin"/>
			        	        
		    </LinearLayout>
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="First Name *"
			    android:layout_marginBottom="@dimen/activity_component_margin_small"
			    android:textSize="@dimen/text_size_subtitle"/>
			<com.vi8e.giantapp.widgets.EditTextClearButton
			    android:id="@+id/editTextFirstName"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="@dimen/activity_component_margin"
			    android:singleLine="true"
			    android:ems="10" />
			<TextView
	            android:id="@+id/textViewErrorFirstName"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/error_color"
	            android:textSize="@dimen/text_size_subtitle"
	            android:layout_marginBottom="@dimen/activity_component_margin"
	            android:visibility="gone"
	            android:text="Medium Text"/>
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Last Name *"
			    android:layout_marginBottom="@dimen/activity_component_margin_small"
			    android:textSize="@dimen/text_size_subtitle"/>
			<com.vi8e.giantapp.widgets.EditTextClearButton
			    android:id="@+id/editTextLastName"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="@dimen/activity_component_margin"
			    android:singleLine="true"
			    android:ems="10" />
			<TextView
	            android:id="@+id/textViewErrorLastName"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/error_color"
	            android:textSize="@dimen/text_size_subtitle"
	            android:layout_marginBottom="@dimen/activity_component_margin"
	            android:visibility="gone"
	            android:text="Medium Text"/>	
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Postal Code *"
			    android:layout_marginBottom="@dimen/activity_component_margin_small"
			    android:textSize="@dimen/text_size_subtitle"/>
			<com.vi8e.giantapp.widgets.EditTextClearButton
			    android:id="@+id/editTextPostal"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="@dimen/activity_component_margin"
			    android:singleLine="true"
			    android:inputType="number"
			    android:ems="10" />
			<TextView
	            android:id="@+id/textViewErrorPostal"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/error_color"
	            android:textSize="@dimen/text_size_subtitle"
	            android:layout_marginBottom="@dimen/activity_component_margin"
	            android:visibility="gone"
	            android:text="Medium Text"/>
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Delivery Address *"
			    android:layout_marginBottom="@dimen/activity_component_margin_small"
			    android:textSize="@dimen/text_size_subtitle"/>
			<com.vi8e.giantapp.widgets.EditTextClearButton
			    android:id="@+id/editTextDeliveryAddress"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="@dimen/activity_component_margin"
			    android:ems="10" />
			<TextView
	            android:id="@+id/textViewErrorAddress"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/error_color"
	            android:textSize="@dimen/text_size_subtitle"
	            android:layout_marginBottom="@dimen/activity_component_margin"
	            android:visibility="gone"
	            android:text="Medium Text"/>
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Country : Singapore"
			    android:layout_marginBottom="@dimen/activity_component_margin"
			    android:textSize="@dimen/text_size_subtitle" />
			<TextView
			    android:id="@+id/textViewMobileNumber"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Mobile Number"
			    android:layout_marginBottom="@dimen/activity_component_margin_small"
			    android:textSize="@dimen/text_size_subtitle"/>
			<com.vi8e.giantapp.widgets.EditTextClearButton
			    android:id="@+id/editTextMobile"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="@dimen/activity_component_margin"
			    android:singleLine="true"
			    android:inputType="number"
			    android:ems="10" />
			<TextView
	            android:id="@+id/textViewErrorMobile"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/error_color"
	            android:textSize="@dimen/text_size_subtitle"
	            android:layout_marginBottom="@dimen/activity_component_margin"
	            android:visibility="gone"
	            android:text="Medium Text" />
			<TextView
			    android:id="@+id/textViewHomeNumber"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Home Number"
			    android:layout_marginBottom="@dimen/activity_component_margin_small"
			    android:textSize="@dimen/text_size_subtitle"/>
			<com.vi8e.giantapp.widgets.EditTextClearButton
			    android:id="@+id/editTextHome"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="@dimen/activity_component_margin"
			    android:singleLine="true"
			    android:inputType="number"
			    android:ems="10" />
			<TextView
	            android:id="@+id/textViewErrorHome"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/error_color"
	            android:textSize="@dimen/text_size_subtitle"
	            android:layout_marginBottom="@dimen/activity_component_margin"
	            android:visibility="gone"
	            android:text="Medium Text"/>
			<TextView
			    android:id="@+id/textViewOfficeNumber"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Office Number"
			    android:layout_marginBottom="@dimen/activity_component_margin_small"
			    android:textSize="@dimen/text_size_subtitle"/>
			<com.vi8e.giantapp.widgets.EditTextClearButton
			    android:id="@+id/editTextOffice"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="@dimen/activity_component_margin"
			    android:singleLine="true"
			    android:inputType="number"
			    android:ems="10" />
			<TextView
	            android:id="@+id/textViewErrorOffice"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/error_color"
	            android:textSize="@dimen/text_size_subtitle"
	            android:layout_marginBottom="@dimen/activity_component_margin"
	            android:visibility="gone"
	            android:text="Medium Text"/>
			<LinearLayout android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal">
				<CheckBox
				    android:id="@+id/checkBoxTerms"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginBottom="@dimen/activity_component_margin"
				    android:textColor="@color/text_color_grey"/>
				<LinearLayout android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="vertical">
					<TextView 
					    android:id="@+id/textViewTerms"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:clickable="true"
					    android:textSize="@dimen/text_size_subtitle"
					    android:text="@string/terms"/>	   		
					<TextView 
					    android:id="@+id/textViewPrivacy"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:clickable="true"
					    android:textSize="@dimen/text_size_subtitle"
					    android:text="@string/privacy"/>	   		
				</LinearLayout>
			</LinearLayout>
			<TextView
	            android:id="@+id/textViewErrorTerms"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/error_color"
	            android:textSize="@dimen/text_size_subtitle"
	            android:layout_marginBottom="@dimen/activity_component_margin"
	            android:visibility="gone"
	            android:text="Medium Text"/>
			<CheckBox
			    android:id="@+id/checkBoxSubscribe"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textColor="@color/text_color_grey"
			    android:layout_marginBottom="@dimen/activity_component_margin"
			    android:text="Subscribe to Our Newsletter" />
		</LinearLayout>
    </ScrollView>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_grey_darker"
        android:padding="@dimen/activity_component_margin">
		<Button
		    android:id="@+id/buttonRegister"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/background_button_orange"
		    android:text="Register" />
    </LinearLayout>
</LinearLayout>
