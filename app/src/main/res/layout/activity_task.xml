<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.vi8e.um.wunderlist.Activity.TaskActivity"

                android:background="@mipmap/bg_dummy">


    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_alignParentTop="true"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/editTextStar"
            android:layout_toStartOf="@+id/editTextStar"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextStar"
            android:src="@mipmap/wl_task_detail_ribbon"
            android:layout_alignTop="@+id/editText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/editText"/>

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView2"
            android:layout_below="@+id/editText"
            android:layout_alignRight="@+id/editTextStar"
            android:layout_alignEnd="@+id/editTextStar">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/editText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center_horizontal">

            <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/listViewTaskInComplete"
                    android:layout_below="@+id/editTextStar"
                    android:layout_centerHorizontal="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="COMPLETED TO-DOS "
                    android:textColor="@color/white"
                    android:background="@color/transparent_black"
                    android:id="@+id/tvComplete"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>

            <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/listViewTaskComplete"

                    android:layout_below="@+id/editTextStar"
                    android:layout_centerHorizontal="true"/>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
