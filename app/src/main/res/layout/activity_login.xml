<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingBottom="@dimen/activity_component_margin"
              android:paddingLeft="@dimen/activity_component_margin"
              android:paddingRight="@dimen/activity_component_margin"
              android:paddingTop="@dimen/activity_component_margin"

              android:orientation="vertical"
              android:gravity="center_horizontal">
    <!--tools:context="com.vi8e.giantapp.LandingActivity"-->
<!--     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_title"
        android:textColor="@color/text_color_grey"
        android:layout_marginBottom="@dimen/activity_component_margin"
        android:text="Login to Giant" /> -->

    <com.vi8e.um.wunderlist.widgets.EditTextClearButton
        android:id="@+id/editTextEmail"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="Email address"
        android:layout_marginBottom="@dimen/activity_component_margin"
        android:background="@drawable/selector_edittext"/>

	<com.vi8e.um.wunderlist.widgets.EditTextClearButton
        android:id="@+id/edittextPassword"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="Password"
        android:layout_marginBottom="@dimen/activity_component_margin"
        android:background="@drawable/selector_edittext"/>
	<TextView
            android:id="@+id/textViewError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/error_color"
            android:textSize="@dimen/text_size_subtitle"
            android:layout_marginBottom="@dimen/activity_component_margin"
            android:visibility="gone"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_component_margin"
        android:text="Log In"
        android:background="@drawable/background_button_orange"
        style="@style/MyButton"/>

    <TextView
        android:id="@+id/textViewForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_grey"
        android:textSize="@dimen/text_size_subtitle"
        android:text="@string/forgot" 
        android:focusable="true"
		android:focusableInTouchMode="true"
		android:clickable="true"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
	    android:gravity="center">
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/text_size_subtitle"
	        android:textColor="@color/text_color_grey"
	        android:layout_marginBottom="@dimen/activity_component_margin"
	        android:text="Not a Giant member?" />
	
	    <Button
	        android:id="@+id/buttonRegister"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="@dimen/activity_component_margin"
	        android:paddingLeft="@dimen/activity_horizontal_margin"
	        android:paddingRight="@dimen/activity_horizontal_margin"
	        android:text="Sign Up Now" 
	        android:background="@drawable/background_button_orange"
	        style="@style/MyButton"/>
	
	    <TextView
	        android:id="@+id/textViewLater"
	        android:textSize="@dimen/text_size_subtitle"
	        android:textColor="@color/text_color_grey"
	        android:padding="@dimen/activity_component_margin"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:minHeight="@dimen/activity_component_default_height"
	        android:text="@string/later" 
	        android:focusable="true"
	        android:focusableInTouchMode="true"
	        android:clickable="true"
	        android:gravity="center"/>
		    	    
	</LinearLayout>
</LinearLayout>
