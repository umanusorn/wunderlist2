<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    tools:context="com.vi8e.um.wunderlist.SearchActivity">
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginTop="80dp"
	    android:orientation="vertical">
		<TextView
		    android:id="@+id/textViewError"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:paddingTop="@dimen/activity_vertical_margin"
		    android:layout_marginBottom="@dimen/activity_component_margin"
		    android:visibility="gone"
		    android:text="Item not found, please use another keyword to search"
		    android:textColor="@color/error_color"
		    android:textSize="@dimen/text_size_subtitle"/>
	
		<GridView
		    android:id="@+id/gridViewResult"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
	        android:background="@color/white"
	        android:scrollbars="none"
		    android:numColumns="2" >
		</GridView>
	
	</LinearLayout>
	<LinearLayout 
   	 	android:id="@+id/linearSearch"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    android:gravity="center">
	    <com.vi8e.um.wunderlist.widgets.EditTextClearButton
	        android:id="@+id/editTextSearch"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content" 
	        android:layout_weight="1"
	        android:singleLine="true"
	        android:hint="Search..">
	
	        <requestFocus />
	    </com.vi8e.um.wunderlist.widgets.EditTextClearButton>

	    <Button
	        android:id="@+id/buttonSearch"
	        android:layout_marginLeft="@dimen/activity_component_margin"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Search" />
	
		</LinearLayout>
</RelativeLayout>
