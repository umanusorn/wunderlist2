<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:id="@+id/bottomBarRoot"
        android:clipToPadding="false"
        android:elevation="10dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:layout_below="@+id/listtitle"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:src="@drawable/abc_list_pressed_holo_dark"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/upload"
            android:layout_toRightOf="@+id/upload"
            android:layout_toEndOf="@+id/upload"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true" android:id="@+id/linearLayout"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="@dimen/md_listitem_control_margin"
            android:text="3"
            android:id="@+id/textView4"
            android:textColor="@color/red_400"
            android:layout_alignParentBottom="false"
            android:layout_toLeftOf="@+id/textView5"
            android:layout_toStartOf="@+id/textView5"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="@dimen/md_listitem_control_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1"
            android:id="@+id/textView5"
            android:textColor="@color/grey_600"
            android:layout_alignTop="@+id/textView4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextComment"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:text="Add a comment..."
            android:layout_toStartOf="@+id/sendComment"
            android:layout_toRightOf="@+id/upload"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SEND"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:id="@+id/sendComment" android:layout_alignBottom="@+id/editText3"
            android:layout_alignParentEnd="true"
            />
</RelativeLayout>
