<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_component_margin"
    android:paddingLeft="@dimen/activity_component_margin"
    android:paddingRight="@dimen/activity_component_margin"
    android:paddingTop="@dimen/activity_component_margin"
    tools:context="com.vi8e.um.wunderlist.ChangePasswordActivity"
    android:orientation="vertical">
  <com.vi8e.um.wunderlist.widgets.EditTextClearButton
        android:id="@+id/editTextEmail"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="Email address"
        android:layout_marginBottom="@dimen/activity_component_margin"/>

	<Button
	    android:id="@+id/buttonForgot"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/background_button_orange"
	    android:text="Reset password" />

</LinearLayout>
