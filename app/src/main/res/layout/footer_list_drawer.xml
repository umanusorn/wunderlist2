   <LinearLayout 
        android:id="@+id/linearMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:paddingTop="@dimen/activity_component_margin_small"
    	android:paddingBottom="@dimen/activity_component_margin_small"
        android:paddingLeft="@dimen/activity_component_margin"
        android:paddingRight="@dimen/activity_component_margin"
        android:background="@drawable/selector_background_drawer3"
        android:clickable="true"
        android:orientation="horizontal">  
		<TextView
	        android:id="@+id/textViewMore"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/text_size_subtitle"
	        android:text="Help"
	        android:gravity="center_vertical"/>
		<ImageView
	        android:id="@+id/imageViewArrow"
	        android:visibility="gone"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:src="@drawable/ic_action_expand" />
   	</LinearLayout>   	   
