	        android:id="@+id/linearFAQ"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:paddingTop="@dimen/activity_component_margin_small"
	    	android:paddingBottom="@dimen/activity_component_margin_small"
	        android:paddingLeft="@dimen/activity_component_margin"
	        android:paddingRight="@dimen/activity_component_margin"
	        android:background="@drawable/selector_background_drawer2"
	        android:clickable="true"
	        android:orientation="horizontal">  
	        <ImageView
		        android:id="@+id/imageViewIcon"
		        android:layout_width="20dp"
		        android:layout_height="20dp"
		        android:layout_marginRight="@dimen/activity_vertical_margin"
		        android:src="@null"/>
		    <TextView
		        android:id="@+id/textViewFAQ"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
		        android:text="FAQ"
		        android:textSize="@dimen/text_size_subtitle"
		        android:gravity="center_vertical"/>
	   	</LinearLayout>
